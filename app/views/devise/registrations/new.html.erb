<div class="row"> 
  <% if params[:plan] == '2' %>
    <h2 class="text-center">Payment Information</h2>
  <% else %>
    <h2 class="text-center">Free Account</h2>
  <% end %>
  <div class="col-md-6 col-md-offset-3">
    <div class="well">
      <h2>Sign up</h2>
        
        <% if params[:plan] == '1' %>
          <%= render 'basic_form' %>
        <% else %>
          <%= render 'pro_form' %>
        <% end %>
      
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>